<Page x:Class="TranslateApplication.Games.SpeedTraining"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TranslateApplication.Games"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="SpeedTraining">
    <Grid Name="grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="90*"/>
            <RowDefinition Height="10*"/>
        </Grid.RowDefinitions>
        <TextBlock Name="text" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0"/>
        <Button Name="startGameButton" Content="Начать игру" Grid.Row="1" Click="StartGameButtonClick"/>
    </Grid>
</Page>
